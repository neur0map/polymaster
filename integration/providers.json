{
  "weather": {
    "name": "Meteostat",
    "category": "weather",
    "rapidapi_host": "meteostat.p.rapidapi.com",
    "env_key": "RAPIDAPI_KEY",
    "keywords": ["temperature", "weather", "forecast", "high temp", "low temp", "rain", "snow"],
    "endpoints": {
      "daily": {
        "method": "GET",
        "path": "/point/daily",
        "description": "Daily weather data for a location",
        "params": {
          "lat": { "type": "number", "required": true, "description": "Latitude", "default": 40.7128 },
          "lon": { "type": "number", "required": true, "description": "Longitude", "default": -74.006 },
          "start": { "type": "string", "required": true, "description": "Start date", "default": "2026-02-09" },
          "end": { "type": "string", "required": true, "description": "End date", "default": "2026-02-09" }
        }
      }
    }
  },
  "crypto": {
    "name": "Coinranking",
    "category": "crypto",
    "rapidapi_host": "coinranking1.p.rapidapi.com",
    "env_key": "RAPIDAPI_KEY",
    "keywords": ["bitcoin", "BTC", "ethereum", "ETH", "solana", "SOL", "crypto", "price"],
    "endpoints": {
      "coin_price": {
        "method": "GET",
        "path": "/coin/{coinId}/price",
        "description": "Get current price for a coin",
        "params": {
          "coinId": { "type": "string", "required": true, "description": "Coin UUID (BTC: Qwsogvtv82FCd)", "default": "Qwsogvtv82FCd" }
        }
      }
    }
  },
  "news": {
    "name": "Cryptocurrency News",
    "category": "news",
    "rapidapi_host": "cryptocurrency-news2.p.rapidapi.com",
    "env_key": "RAPIDAPI_KEY",
    "keywords": [],
    "match_all": true,
    "endpoints": {
      "coindesk": {
        "method": "GET",
        "path": "/v1/coindesk",
        "description": "Latest crypto news from CoinDesk",
        "params": {}
      }
    }
  }
}
